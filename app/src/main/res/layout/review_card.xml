
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    >
    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Theresa"
            style="@style/ProductText"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="December 4, 2013"
            android:layout_weight="1"
            android:gravity="right"
            style="@style/ProductText"
            />
    </LinearLayout>
    <RatingBar
        android:id="@+id/rb_ratings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:rating="4.5"
        style="?android:attr/ratingBarStyleSmall"
        android:clickable="false"
        android:layout_below="@id/ll_top"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:id="@+id/tv_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rb_ratings"
        android:paddingTop="16dp"
        android:singleLine="false"
        android:text="I love these shoes! They are a bit loose in the heel, so if you have a skinny heel, they wouldn't fit right. I am a true size 6. I kept them because I think a 5.5 (if they had this size available) would be too tight. The heel stays on for me, but my friend who has the same sized foot, but a skinnier heel, can't wear them. They slip off her heel."
        style="@style/ProductText"
        />
</RelativeLayout>
