<resources>

    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>


    <!-- Base application theme. -->
    <style name="ProductHeader" parent="@android:style/TextAppearance.Large">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="ProductText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/abc_slide_in_bottom</item>
    </style>


    <style name="BikestoreWalletFragmentDetailsTextAppearance">
        <item name="android:textColor">@color/wallet_details_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="BikestoreWalletFragmentDetailsHeaderTextAppearance" parent="BikestoreWalletFragmentDetailsTextAppearance">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonBikestore" parent="android:Widget.Button">
        <item name="android:minHeight">@dimen/bikestore_button_min_width</item>
        <item name="android:minWidth">@dimen/bikestore_button_max_width</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/bikestore_button_text</item>
    </style>

    <style name="MyTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MyTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
